@model IEnumerable<CatalogCourse.Models.Guide>

@{
    ViewData["Title"] = "Каталог руководств";
    var languages = ViewBag.Languages as List<string>;
    var selectedLanguage = ViewBag.SelectedLanguage as string;
}


<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CatalogCourse</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="site.css" asp-append-version="true" />
</head>


<div class="container mt-4">
    <a href="/Home" class="btn btn-lg btn-outline-primary mt-3 shadow-sm">
        Вернуться на главную страницу
    </a>
    <h1 class="mb-4 text-center">Каталог руководств</h1>

    <form method="get" asp-controller="Guides" asp-action="Index" class="mb-3">
        <label for="language" class="form-label">Выберите язык:</label>
        <select name="language" id="language" class="form-select w-auto d-inline">
            <option value="">Все</option>
            @foreach (var lang in languages)
            {
                <option value="@lang" selected="@(lang == selectedLanguage)">
                    @lang
                </option>
            }
        </select>
        <button type="submit" class="btn btn-primary">Фильтровать</button>
    </form>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="card-title text-primary">@item.Title</h5>
                        <h6 class="card-subtitle mb-2 text-muted">Язык: @item.Language</h6>
                        <p class="card-text">@item.Description</p>
                    </div>
                    <div class="card-footer bg-white border-0 text-end">
                        <a href="@item.Link" target="_blank" class="btn btn-outline-primary btn-sm">
                            Открыть
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
