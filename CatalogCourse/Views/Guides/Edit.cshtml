@model CatalogCourse.Models.Guide

@{
    ViewData["Title"] = "Редактировать курс";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CatalogCourse</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="~/js/site.js" asp-append-version="true"></script>
    
</head>

<body>
    <div class="grid-lines"></div>
    <div class="bg-elements">
        <div class="element element-1"></div>
        <div class="element element-2"></div>
        <div class="element element-3"></div>
    </div>

    <div class="container mt-4">
        <a href="/Guides/Index" class="nav-btn">
            <i class="fas fa-arrow-left"></i> Вернуться к каталогу
        </a>

        <div class="page-header">
            <h1 class="page-title">Редактировать курс</h1>
        </div>

        <div class="form-container">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="Title" class="form-label">
                        <i class="fas fa-heading"></i> Название курса
                    </label>
                    <input asp-for="Title" class="form-control-futuristic" placeholder="Введите название курса" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Language" class="form-label">
                        <i class="fas fa-code"></i> Язык программирования
                    </label>
                    <input asp-for="Language" class="form-control-futuristic" placeholder="Например: C#, Python, JavaScript" />
                    <span asp-validation-for="Language" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="form-label">
                        <i class="fas fa-align-left"></i> Описание
                    </label>
                    <textarea asp-for="Description" class="form-control-futuristic" placeholder="Опишите содержание курса..."></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Link" class="form-label">
                        <i class="fas fa-link"></i> Ссылка на курс
                    </label>
                    <input asp-for="Link" class="form-control-futuristic" placeholder="https://example.com/course" />
                    <span asp-validation-for="Link" class="text-danger"></span>
                </div>

                <div class="btn-group">
                    <button type="submit" class="btn-futuristic btn-success-futuristic">
                        <i class="fas fa-save"></i> Сохранить изменения
                    </button>
                    <a asp-action="Index" class="btn-futuristic btn-secondary-futuristic">
                        <i class="fas fa-times"></i> Отмена
                    </a>
                </div>
            </form>
        </div>
    </div>

   
</body>
</html>